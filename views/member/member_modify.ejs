<div class="col-md-4 panel ">
    <!-- 导航 -->
    <ul class="breadcrumb">
        <li>
            <a href="#">成员</a>
        </li>
        <li class="active">
            成员修改
        </li>
    </ul>

    <form class="form-horizontal" role="form" method="post" action="/member/modify">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label help-block">姓名</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" placeholder="" value="<%= member.name%>">
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">称谓</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" placeholder="" value="<%= member.title%>">
            </div>
        </div>
        <div class="form-group">
            <label for="birthday" class="col-sm-2 control-label help-block">生日</label>
            <div class="input-append date col-sm-10">
                <input type="text" id="birthday" name="birthday" class="form-control"  value="<%= member.birthday%>" placeholder="请选择日期">
                <span class="add-on"><i class="icon-th"></i></span>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">身高</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="stature" name="stature" value="<%= member.stature%>" placeholder="单位：cm （请输入数字，输错是傻叉）" >
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">体重</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="weight" name="weight" value="<%= member.weight%>" placeholder="单位：kg （请输入数字，输错是傻叉）">
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">胸围</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="circumference" name="circumference" value="<%= member.circumference%>" placeholder="单位：cm （请输入数字，输错是傻叉）">
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">腰围</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="waistline" name="waistline" value="<%= member.waistline%>" placeholder="单位：cm （请输入数字，输错是傻叉）">
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">鞋码</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="shoeSize" name="shoeSize" value="<%= member.shoeSize%>" placeholder="EUR （请输入数字，输错是傻叉）">

            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label help-block">简述</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="2" id="comments" name="comments" value="<%= member.comments%>" placeholder="口味喜好..."></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-block">修改</button>
            </div>
        </div>
    </form>

</div>