</style>
<% posts.forEach(function (post, index) { %>
<p><h2><a href="#"><%= post.title %></a></h2></p>
<p class="info">
    作者：<a href="#"><%= post.name %></a> |
    日期：<%= post.create_at %>
</p>
<p><%= post.post %></p>
<% }) %>

<a class="btn btn-lg btn-success" href="/post/add" role="button">发表博客</a>
