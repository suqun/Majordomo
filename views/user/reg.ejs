<% include ../header.ejs%>
<!-- Bootstrap -->
<link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet" />

<style>

    /* http://css-tricks.com/perfect-full-page-background-image/ */
    html {
        background: url(/images/d0485933c1f79639ea4cf05862aa97bc.jpg) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }

    body {
        padding-top: 80px;
        font-size: 16px;
        font-family: "Open Sans",serif;
        background: transparent;
    }

    h1 {
        font-family: "Abel", Arial, sans-serif;
        font-weight: 400;
        font-size: 40px;
    }

    /* Override B3 .panel adding a subtly transparent background */
    .panel {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .margin-base-vertical {
        margin: 40px 0;
    }

</style>

</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 panel panel-default">
            <!-- 导航 -->
            <ul class="breadcrumb">
                <li class="active">
                    用户注册
                </li>
            </ul>
            <form class="margin-base-vertical" role="form" method="post" action="/users/reg">

                <p class="input-group">
                    <span class="input-group-addon">昵称</span>
                    <input type="text" class="form-control input-lg" id="loginname" name="loginname" placeholder="Enter your loginname">
                </p>
                <p class="input-group">
                    <span class="input-group-addon">姓名</span>
                    <input type="text" class="form-control input-lg" id="name" name="name" placeholder="Enter your name">
                </p>
                <p class="input-group">
                    <span class="input-group-addon">邮箱</span>
                    <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Enter email">
                </p>
                <p class="input-group">
                    <span class="input-group-addon">密码</span>
                    <input type="password" class="form-control input-lg" id="pass" name="pass" placeholder="Password">
                </p>
                <p class="input-group">
                    <span class="input-group-addon">重复密码</span>
                    <input type="password" class="form-control input-lg" id="pass_repeat" name="pass_repeat" placeholder="Repeat Password">
                </p>
                <br>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">提交</button>
                </div>
                <p class="help-block text-center"><small>We won't send you spam. Unsubscribe at any time.</small></p>
            </form>
            <% if ( locals.success ) {  %>
            <div class="alert alert-success"> <%= locals.success %></div>
            <% } %>
            <% if ( locals.error ) { %>
            <div class="alert alert-danger "> <%= locals.error %></div>
            <% } %>
        </div><!-- //main content -->
    </div><!-- //row -->
</div> <!-- //container -->


<!-- Bootstrap core JavaScript
==================================================
<script src="/javascripts/jquery-2.0.3.js"></script>-->
<script src="/javascripts/bootstrap.js"></script>
</body>
</html>

